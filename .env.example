# Environment variables example

# PostgreSQL
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE

# Redis
REDIS_URL=redis://localhost:6379

# NextAuth (for anonymous auth, if needed)
NEXTAUTH_SECRET=your-secret

# Twilio WhatsApp Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_WEBHOOK_URL=https://your-domain.com/api/whatsapp/webhook
WHATSAPP_VERIFY_TOKEN=your-webhook-verification-token

# Public WhatsApp Number (for client-side use)
NEXT_PUBLIC_WHATSAPP_NUMBER=+14155238886

# i18n
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,zh,bn,ta,my,id

# PWA
NEXT_PUBLIC_PWA=true

# WhatsApp Bot Configuration
WHATSAPP_SESSION_TIMEOUT=1800000
WHATSAPP_MAX_RETRIES=3
